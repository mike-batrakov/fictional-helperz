<div class="container">
  <div class="wrapper">
      <div class="row">
        <div class="col-sm-4 col-m-6" id="img">
          <%= image_tag "superHelperz.jpg", alttext: "super heros", width: 330 %>
        </div>
        <div class="form-group col-sm-8 col-m-6">
          <h2>Pick your Date!</h2>
          <h3><%= @listing.name %></h3>
          <p> <%= @listing.description %></p>
          <p>Booking status :
            <% if @booking.status %>
            Approved!
            <% else %>
            Pending
            <% end %>
            <div class="form">
              <%= simple_form_for [@listing, @booking] do |f| %>
              <%= f.input :start_date, as: :date, html5: true %> 
              <%= f.input :end_date, as: :date, html5: true %> 
              <%= f.submit %>
              <% end %> 
                <%= link_to "Back", listings_path %>
            </div>
            <div>    
            </div>
        </div>
      </div>  
    </div>
</div>






