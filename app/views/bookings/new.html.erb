<h2>Book my SuperHelperz</h2>

<%= simple_form_for [ @listing, @booking ] do |f| %>
<%= f.association :listing, input_html: { class: "beautiful-dropdown" }, include_hidden: false %>
<%= f.input :start_date, as: :date, html5: true%>
<%= f.submit %>
<% end %>

